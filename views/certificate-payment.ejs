                    <a href="<%= telegramGroup %>" class="nav-contact-icon telegram-inverted" title="Telegram канал" target="_blank">
                        <i class="fab fa-telegram-plane"></i>
                    </a>
                    <a href="<%= vkGroup %>" class="nav-contact-icon" title="ВКонтакте" target="_blank">
                        <i class="fab fa-vk"></i>
                    </a>
                </div>
                <div class="nav-toggle">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="payment-page">
        <div class="payment-container">
            <div class="payment-header">
                <h1><i class="fas fa-credit-card"></i> Завершение покупки</h1>
                <p>Для получения сертификата необходимо пополнить ваш персональный кошелек</p>
            </div>

            <!-- Информация о кошельке -->
            <div class="wallet-info">
                <div class="wallet-label">Код для покупки сертификата:</div>
                <div class="wallet-number" id="walletNumber">---- ---- ---- ----</div>
                <div class="wallet-amount">Сумма к оплате: <span id="amount">0</span> ₽</div>
                <button class="copy-btn" onclick="copyWalletNumber()">
                    <i class="fas fa-copy"></i> Скопировать номер
                </button>
            </div>

            <div class="payment-card">
                <div class="payment-methods">
                    <!-- SMS на 900 -->
                    <div class="payment-method">
                        <div class="method-header">
                            <div class="method-icon">
                                <i class="fas fa-sms"></i>
                            </div>
                            <h3 class="method-title">SMS на номер 900</h3>
                        </div>
                        <ol class="method-steps">
                            <li>Отправьте SMS на номер <strong>900</strong></li>
                            <li>В тексте сообщения укажите: <strong>ПЕРЕВОД [КОД] [СУММА]</strong></li>
                            <li>Подтвердите операцию согласно инструкциям банка</li>
                        </ol>
                        <div class="sms-example">
                            Пример: ПЕРЕВОД <span id="smsWalletNumber">1234567890123456</span> <span id="smsAmount">3000</span>
                        </div>
                    </div>

                    <!-- Приложение банка -->
                    <div class="payment-method">
                        <div class="method-header">
                            <div class="method-icon">
                                <i class="fas fa-mobile-alt"></i>
                            </div>
                            <h3 class="method-title">Приложение банка</h3>
                        </div>
                        <ol class="method-steps">
                            <li>Откройте приложение вашего банка</li>
                            <li>Выберите "Переводы" → "По номеру карты/счета"</li>
                            <li>Введите код сертификата как номер получателя</li>
                            <li>Укажите сумму и обязательно добавьте код в комментарий</li>
                            <li>Подтвердите перевод</li>
                        </ol>
                    </div>
                </div>

                <!-- Важная информация -->
                <div class="warning-box">
                    <h4><i class="fas fa-exclamation-triangle"></i> Важно!</h4>
                    <p>Обязательно укажите номер кошелька в комментарии к платежу. Без этого платеж не будет обработан автоматически.</p>
                </div>

                <!-- Что происходит после оплаты -->
                <div class="success-info">
                    <h4><i class="fas fa-check-circle"></i> После оплаты</h4>
                    <p>Сертификат будет автоматически создан и отправлен на указанный вами email в течение нескольких минут после поступления платежа.</p>
                </div>
            </div>

            <!-- Кнопка назад -->
            <a href="/certificate/purchase" class="back-btn">
                <i class="fas fa-arrow-left"></i>
                Вернуться к форме
            </a>
        </div>
    </main>

    <!-- Scripts -->
    <script src="/js/main.js"></script>
    <script>
        // Получаем параметры из URL
        const urlParams = new URLSearchParams(window.location.search);
        const walletNumber = urlParams.get('walletNumber');
        const amount = urlParams.get('amount');
        const clientId = urlParams.get('clientId');

        // Проверяем наличие обязательных параметров
        if (!walletNumber || !amount) {
            alert('Ошибка: отсутствуют данные для оплаты');
            window.location.href = '/certificate/purchase';
        }

        // Заполняем данные на странице
        document.getElementById('walletNumber').textContent = walletNumber;
        document.getElementById('amount').textContent = amount;
        
        // Для SMS примера убираем пробелы
        const walletNumberForSMS = walletNumber.replace(/\s/g, '');
        document.getElementById('smsWalletNumber').textContent = walletNumberForSMS;
        document.getElementById('smsAmount').textContent = amount;

        // Функция копирования номера кошелька
        function copyWalletNumber() {
            const walletNumberText = walletNumber.replace(/\s/g, '');
            
            if (navigator.clipboard) {
                navigator.clipboard.writeText(walletNumberText).then(() => {
                    showCopySuccess();
                }).catch(err => {
                    console.error('Ошибка копирования:', err);
                    fallbackCopyTextToClipboard(walletNumberText);
                });
            } else {
                fallbackCopyTextToClipboard(walletNumberText);
            }
        }

        // Fallback функция копирования для старых браузеров
        function fallbackCopyTextToClipboard(text) {
            const textArea = document.createElement("textarea");
            textArea.value = text;
            textArea.style.top = "0";
            textArea.style.left = "0";
            textArea.style.position = "fixed";

            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();

            try {
                const successful = document.execCommand('copy');
                if (successful) {
                    showCopySuccess();
                } else {
                    alert('Не удалось скопировать номер');
                }
            } catch (err) {
                console.error('Fallback: Oops, unable to copy', err);
                alert('Не удалось скопировать номер');
            }

            document.body.removeChild(textArea);
        }

        // Показ уведомления об успешном копировании
        function showCopySuccess() {
            const btn = document.querySelector('.copy-btn');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-check"></i> Скопировано!';
            btn.style.background = 'rgba(46, 204, 113, 0.3)';
            
            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.style.background = 'rgba(255,255,255,0.2)';
            }, 2000);
        }

        // Проверяем статус платежа каждые 30 секунд
        if (clientId) {
            const checkPaymentStatus = () => {
                fetch(`/api/certificate/check-payment-status?clientId=${clientId}&amount=${amount}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success && data.certificateCreated) {
                            // Показываем уведомление об успешной оплате
                            alert('Оплата получена! Сертификат отправлен на ваш email.');
                            window.location.href = '/certificates';
                        }
                    })
                    .catch(error => {
                        console.error('Ошибка проверки статуса:', error);
                    });
            };

            // Проверяем статус каждые 30 секунд в течение 10 минут
            let checkCount = 0;
            const maxChecks = 20; // 20 * 30 секунд = 10 минут
            const interval = setInterval(() => {
                checkCount++;
                if (checkCount >= maxChecks) {
                    clearInterval(interval);
                } else {
                    checkPaymentStatus();
                }
            }, 30000);
        }
    </script>
    
    <!-- Analytics -->
