    <style>
        .payment-page {
            padding-top: 80px;
            min-height: 100vh;
            background: #f8f9fa;
        }
        
        .payment-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px 20px;
        }
        
        .payment-header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .payment-header h1 {
            font-size: 2.5rem;
            color: #2c3e50;
            margin-bottom: 15px;
        }
        
        .payment-header p {
            font-size: 1.2rem;
            color: #7f8c8d;
        }
        
        .payment-card {
            background: white;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }
        
        .wallet-info {
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            margin-bottom: 40px;
        }
        
        .wallet-number {
            font-size: 2.5rem;
            font-weight: bold;
            letter-spacing: 3px;
            margin: 20px 0;
            font-family: 'Courier New', monospace;
        }
        
        .wallet-amount {
            font-size: 2rem;
            margin-bottom: 15px;
        }
        
        .wallet-label {
            font-size: 1.1rem;
            opacity: 0.9;
            margin-bottom: 10px;
        }
        
        .copy-btn {
            background: rgba(255,255,255,0.2);
            border: 2px solid rgba(255,255,255,0.3);
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.9rem;
            margin-top: 15px;
            transition: all 0.3s ease;
        }
        
        .copy-btn:hover {
            background: rgba(255,255,255,0.3);
        }
        
        /* Анимации для кликабельных элементов */
        .clickable-code {
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .clickable-code:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 12px rgba(243, 156, 18, 0.4);
        }
        
        .clickable-code:active {
            transform: scale(0.95);
            background: #e67e22 !important;
        }
        
        .clickable-phone {
            transition: all 0.3s ease;
            position: relative;
        }
        
        .clickable-phone:hover {
            color: #2980b9 !important;
            transform: scale(1.05);
            text-shadow: 0 2px 4px rgba(52, 152, 219, 0.3);
        }
        
        .clickable-phone:active {
            transform: scale(0.95);
            color: #1f618d !important;
        }
        
        /* Анимация для кнопки копирования SMS */
        .sms-copy-btn {
            transition: all 0.3s ease;
        }
        
        .sms-copy-btn:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 12px rgba(39, 174, 96, 0.4);
        }
        
        .sms-copy-btn:active {
            transform: scale(0.9);
            background: #229954 !important;
        }
        
        /* Анимация пульсации для важных элементов */
        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(243, 156, 18, 0.7); }
            70% { box-shadow: 0 0 0 10px rgba(243, 156, 18, 0); }
            100% { box-shadow: 0 0 0 0 rgba(243, 156, 18, 0); }
        }
        
        .highlight-code {
            animation: pulse 2s infinite;
        }
        
        .payment-methods {
            display: grid;
            gap: 30px;
        }
        
        .payment-method {
            border: 2px solid #e9ecef;
            border-radius: 15px;
            padding: 30px;
            transition: all 0.3s ease;
        }
        
        .payment-method:hover {
            border-color: #3498db;
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.1);
        }
        
        .method-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 20px;
        }
        
        .method-icon {
            width: 50px;
            height: 50px;
            background: #3498db;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
        }
        
        .method-title {
            font-size: 1.5rem;
            color: #2c3e50;
            margin: 0;
        }
        
        .method-steps {
            list-style: none;
            padding: 0;
        }
        
        .method-steps li {
            padding: 10px 0;
            border-bottom: 1px solid #f8f9fa;
            position: relative;
            padding-left: 30px;
        }
        
        .method-steps li:before {
            content: counter(step-counter);
            counter-increment: step-counter;
            position: absolute;
            left: 0;
            top: 10px;
            background: #3498db;
            color: white;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
            font-weight: bold;
        }
        
        .method-steps {
            counter-reset: step-counter;
        }
        
        .sms-example {
            background: #f8f9fa;
            border-left: 4px solid #3498db;
            padding: 15px 20px;
            margin: 15px 0;
            font-family: 'Courier New', monospace;
            border-radius: 0 8px 8px 0;
        }
        
        .warning-box {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 10px;
            padding: 20px;
            margin: 30px 0;
        }
        
        .warning-box h4 {
            color: #856404;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .warning-box p {
            color: #856404;
            margin: 0;
        }
        
        .success-info {
            background: #d4edda;
            border: 1px solid #c3e6cb;
            border-radius: 10px;
            padding: 20px;
            margin: 30px 0;
        }
        
        .success-info h4 {
            color: #155724;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .success-info p {
            color: #155724;
            margin: 0;
        }
        
        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            color: #3498db;
            text-decoration: none;
            font-size: 1.1rem;
            margin-top: 30px;
            padding: 10px 0;
            transition: color 0.3s ease;
        }
        
        .back-btn:hover {
            color: #2980b9;
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .payment-header h1 {
                font-size: 2rem;
            }
            
            .payment-card {
                padding: 30px 20px;
            }
            
            .wallet-number {
                font-size: 1.8rem;
                letter-spacing: 2px;
            }
            
            .wallet-amount {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
