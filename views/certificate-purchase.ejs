            <form class="purchase-form" id="purchaseForm">
                <!-- Личные данные покупателя -->
                <div class="form-section">
                    <h3><i class="fas fa-user"></i> Данные покупателя</h3>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="fullName">ФИО <span class="required">*</span></label>
