    <script src="/js/main.js"></script>
    <script>
        // Обработка формы покупки сертификата
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('purchaseForm');
            const customAmountRadio = document.getElementById('amountCustom');
            const customAmountBlock = document.getElementById('customAmountBlock');
            const submitBtn = document.getElementById('submitBtn');
            const messageInput = document.getElementById('message');
            const charCountDisplay = document.getElementById('messageCharCount');
            
            // Предзаполнение суммы из URL параметров
            const urlParams = new URLSearchParams(window.location.search);
            const presetAmount = urlParams.get('amount');
            
            if (presetAmount) {
                const amountRadio = document.getElementById(`amount${presetAmount}`);
                if (amountRadio) {
                    amountRadio.checked = true;
                } else {
                    // Если сумма не из предустановленных, используем произвольную
                    customAmountRadio.checked = true;
                    customAmountBlock.style.display = 'block';
                    document.getElementById('customAmountValue').value = presetAmount;
                }
            }
            
            // Показ/скрытие поля для произвольной суммы
            document.querySelectorAll('input[name="amount"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    if (this.value === 'custom') {
                        customAmountBlock.style.display = 'block';
                    } else {
                        customAmountBlock.style.display = 'none';
                    }
                });
            });
            
            // Счетчик символов для сообщения
            function updateCharCount() {
                const length = messageInput.value.length;
                charCountDisplay.textContent = `${length} / 30 символов`;
                
                if (length >= 25) {
                    charCountDisplay.style.color = '#e67e22'; // Оранжевый при приближении к лимиту
                }
                if (length === 30) {
                    charCountDisplay.style.color = '#e74c3c'; // Красный при достижении лимита
                }
                if (length < 25) {
                    charCountDisplay.style.color = '#7f8c8d'; // Серый по умолчанию
                }
            }
            
            messageInput.addEventListener('input', updateCharCount);
            updateCharCount(); // Инициализация при загрузке
            
            // Предварительный просмотр сертификата
            const previewBtn = document.getElementById('previewBtn');
            const previewModal = document.getElementById('previewModal');
            const previewModalBody = document.getElementById('previewModalBody');
            const closeModalElements = document.querySelectorAll('.preview-close, .preview-close-btn');

            const openPreviewModal = () => {
                previewModal.classList.add('active');
                document.body.classList.add('modal-open');
            };

            const closePreviewModal = () => {
                previewModal.classList.remove('active');
                document.body.classList.remove('modal-open');
            };
            
            previewBtn.addEventListener('click', async function() {
                // Собираем данные формы
                const formData = new FormData(form);
                const data = Object.fromEntries(formData);
                
                // Определяем итоговую сумму
                let amount = data.amount;
                if (data.amount === 'custom') {
                    amount = data.customAmountValue;
                }
                
                // Валидация минимальных данных для превью
                if (!amount || amount < 500 || amount > 50000) {
                    alert('Пожалуйста, выберите корректный номинал сертификата (от 500 до 50 000 руб.)');
                    return;
                }
                
                const designId = data.design;
                if (!designId) {
                    alert('Пожалуйста, выберите дизайн сертификата');
                    return;
                }
                
                // Показываем модальное окно с загрузкой
                previewModalBody.innerHTML = '<div class="preview-loading"><i class="fas fa-spinner fa-spin"></i> Загрузка превью...</div>';
                openPreviewModal();
                
                try {
                    // Отправляем запрос на сервер для генерации превью
                    const response = await fetch('/api/certificate/preview', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            nominal_value: amount,
                            design_id: designId,
                            recipient_name: data.recipientName || null,
                            message: data.message || null
                        })
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        previewModalBody.innerHTML = '';

                        if (result.image) {
                            const img = document.createElement('img');
                            img.src = result.image;
                            img.alt = 'Предпросмотр сертификата';
                            previewModalBody.appendChild(img);
                        } else if (result.html) {
                            const iframe = document.createElement('iframe');
                            iframe.srcdoc = result.html;
                            iframe.title = 'Предпросмотр сертификата';
                            previewModalBody.appendChild(iframe);
                        } else {
                            previewModalBody.innerHTML = '<div class="preview-loading" style="color: #e74c3c;"><i class="fas fa-exclamation-circle"></i> Не удалось загрузить превью</div>';
                        }
                    } else {
                        previewModalBody.innerHTML = `<div class="preview-loading" style="color: #e74c3c;"><i class="fas fa-exclamation-circle"></i> Ошибка: ${result.error}</div>`;
                    }
                } catch (error) {
                    console.error('Ошибка при загрузке превью:', error);
                    previewModalBody.innerHTML = '<div class="preview-loading" style="color: #e74c3c;"><i class="fas fa-exclamation-circle"></i> Произошла ошибка при загрузке превью</div>';
                }
            });
            
            // Закрытие модального окна
            closeModalElements.forEach(element => {
                element.addEventListener('click', function() {
                    closePreviewModal();
                });
            });
            
            // Закрытие при клике вне модального окна
            window.addEventListener('click', function(event) {
                if (event.target === previewModal) {
                    closePreviewModal();
                }
            });
            
            // Валидация и отправка формы
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                if (validateForm()) {
                    submitForm();
                }
            });
            
            function validateForm() {
                let isValid = true;
                
                // Очистка предыдущих ошибок
                document.querySelectorAll('.error-message').forEach(el => {
                    el.style.display = 'none';
                    el.textContent = '';
                });
                
                // Валидация ФИО
                const fullName = document.getElementById('fullName').value.trim();
                if (!fullName || fullName.length < 3) {
                    showError('fullNameError', 'Введите корректное ФИО');
                    isValid = false;
                }
                
                // Валидация даты рождения
                const birthDate = document.getElementById('birthDate').value;
                if (!birthDate) {
                    showError('birthDateError', 'Укажите дату рождения');
                    isValid = false;
                } else {
                    const date = new Date(birthDate);
                    const now = new Date();
                    const age = now.getFullYear() - date.getFullYear();
                    if (age < 6 || age > 100) {
                        showError('birthDateError', 'Проверьте корректность даты рождения');
                        isValid = false;
                    }
                }
                
                // Валидация телефона
                const phone = document.getElementById('phone').value.trim();
                const phoneRegex = /^[\+]?[7|8][\s\-]?\(?\d{3}\)?[\s\-]?\d{3}[\s\-]?\d{2}[\s\-]?\d{2}$/;
                if (!phone || !phoneRegex.test(phone)) {
                    showError('phoneError', 'Введите корректный номер телефона');
                    isValid = false;
                }
                
                // Валидация email
                const email = document.getElementById('email').value.trim();
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!email || !emailRegex.test(email)) {
                    showError('emailError', 'Введите корректный email');
                    isValid = false;
                }
                
                // Валидация произвольной суммы
                const selectedAmount = document.querySelector('input[name="amount"]:checked').value;
                if (selectedAmount === 'custom') {
                    const customAmount = parseInt(document.getElementById('customAmountValue').value);
                    if (!customAmount || customAmount < 500 || customAmount > 50000) {
                        showError('customAmountError', 'Сумма должна быть от 500 до 50 000 рублей');
                        isValid = false;
                    }
                }
                
                // Валидация согласия
                const privacyAgreement = document.getElementById('privacyAgreement').checked;
                if (!privacyAgreement) {
                    showError('privacyError', 'Необходимо согласие на обработку персональных данных');
                    isValid = false;
                }
                
                return isValid;
            }
            
            function showError(elementId, message) {
                const errorElement = document.getElementById(elementId);
                errorElement.textContent = message;
                errorElement.style.display = 'block';
            }
            
            function submitForm() {
                // Показываем состояние загрузки
                submitBtn.disabled = true;
                document.querySelector('.btn-text').style.display = 'none';
                document.querySelector('.loading').style.display = 'inline-flex';
                
                // Собираем данные формы
                const formData = new FormData(form);
                const data = Object.fromEntries(formData);
                
                // Определяем итоговую сумму
                if (data.amount === 'custom') {
                    data.amount = data.customAmountValue;
                }
                delete data.customAmountValue;
                
                // Отправляем данные на сервер
                fetch('/api/certificate/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Перенаправляем на страницу оплаты с данными
                        const params = new URLSearchParams({
                            walletNumber: data.data.walletNumber,
                            amount: data.data.amount,
                            clientId: data.data.clientId
                        });
                        window.location.href = `/certificate/payment?${params.toString()}`;
                    } else {
                        throw new Error(data.error || 'Произошла ошибка при обработке заявки');
                    }
                })
                .catch(error => {
                    alert('Ошибка: ' + error.message);
                    console.error('Error:', error);
                })
                .finally(() => {
                    // Возвращаем кнопку в исходное состояние
                    submitBtn.disabled = false;
                    document.querySelector('.btn-text').style.display = 'inline';
                    document.querySelector('.loading').style.display = 'none';
                });
            }
        });
    </script>
    
