    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    
    <style>
        body.modal-open {
            overflow: hidden;
        }

        .purchase-page {
            padding-top: 80px;
            min-height: 100vh;
            background: #f8f9fa;
        }
        
        .purchase-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px 20px;
        }
        
        .purchase-header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .purchase-header h1 {
            font-size: 2.5rem;
            color: #2c3e50;
            margin-bottom: 15px;
        }
        
        .purchase-header p {
            font-size: 1.2rem;
            color: #7f8c8d;
        }
        
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #3498db;
            text-decoration: none;
            font-size: 1.1rem;
            margin-bottom: 20px;
            transition: color 0.3s ease;
        }
        
        .back-link:hover {
            color: #2980b9;
        }
        
        .purchase-form {
            background: white;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .form-section {
            margin-bottom: 40px;
        }
        
        .form-section h3 {
            font-size: 1.5rem;
            color: #2c3e50;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .form-section h3 i {
            color: #3498db;
        }
        
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #2c3e50;
            font-weight: 500;
        }
        
        .form-group label .required {
            color: #e74c3c;
        }
        
        .form-group input,
        .form-group textarea,
        .form-group select {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }
        
        .form-group input:focus,
        .form-group textarea:focus,
        .form-group select:focus {
            outline: none;
            border-color: #3498db;
        }
        
        .form-group textarea {
            resize: vertical;
            min-height: 100px;
        }
        
        .form-help {
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-top: 5px;
        }
        
        .amount-selector {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }
        
        .amount-option {
            position: relative;
        }
        
        .amount-option input[type="radio"] {
            position: absolute;
            opacity: 0;
            width: 0;
            height: 0;
        }
        
        .amount-option label {
            display: block;
            padding: 15px 10px;
            text-align: center;
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
        }
        
        .amount-option input[type="radio"]:checked + label {
            background: #3498db;
            border-color: #3498db;
            color: white;
        }
        
        .amount-option label:hover {
            border-color: #3498db;
        }
        
        .custom-amount {
            margin-top: 20px;
        }
        
        .design-selector {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 20px;
        }
        
        .design-option {
            position: relative;
        }
        
        .design-option input[type="radio"] {
            position: absolute;
            opacity: 0;
            width: 0;
            height: 0;
        }
        
        .design-option label {
            display: block;
            cursor: pointer;
            border: 3px solid transparent;
            border-radius: 10px;
            overflow: hidden;
            transition: border-color 0.3s ease;
        }
        
        .design-option input[type="radio"]:checked + label {
            border-color: #3498db;
        }
        
        .design-option img {
            width: 100%;
            height: 120px;
            object-fit: contain;
            background: #f8f9fa;
            border: 1px solid #e9ecef;
        }
        
        .design-option .design-name {
            padding: 10px;
            text-align: center;
            background: white;
            font-size: 0.9rem;
            color: #2c3e50;
        }
        
        .privacy-agreement {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }
        
        .privacy-checkbox {
            display: flex;
            align-items: flex-start;
            gap: 10px;
        }
        
        .privacy-checkbox input[type="checkbox"] {
            margin-top: 2px;
            transform: scale(1.2);
        }
        
        .privacy-checkbox label {
            font-size: 0.95rem;
            line-height: 1.5;
            color: #2c3e50;
        }
        
        .privacy-checkbox a {
            color: #3498db;
            text-decoration: underline;
        }
        
        .form-buttons {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }
        
        .preview-btn {
            flex: 1;
            min-width: 200px;
            padding: 18px;
            font-size: 1.2rem;
            font-weight: bold;
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        
        .preview-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
        }
        
        .submit-btn {
            flex: 1;
            min-width: 200px;
            padding: 18px;
            font-size: 1.2rem;
            font-weight: bold;
            background: linear-gradient(135deg, #27ae60, #229954);
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        
        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(39, 174, 96, 0.4);
        }
        
        .submit-btn:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
        
        /* Модальное окно превью */
        .preview-modal {
            position: fixed;
            z-index: 10000;
            inset: 0;
            width: 100%;
            height: 100%;
            padding: 20px;
            background-color: rgba(0, 0, 0, 0.7);
            overflow: hidden;
            display: none;
            align-items: center;
            justify-content: center;
        }
        
        .preview-modal.active {
            display: flex;
        }
        
        .preview-modal-content {
            background-color: #fefefe;
            border-radius: 14px;
            box-shadow: 0 18px 45px rgba(0, 0, 0, 0.35);
            width: min(95%, 920px);
            max-height: min(90vh, 720px);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }
        
        .preview-modal-header {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-radius: 10px 10px 0 0;
        }
        
        .preview-modal-header h2 {
            margin: 0;
            font-size: 1.5rem;
        }
        
        .preview-close {
            color: white;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            line-height: 1;
            transition: color 0.3s ease;
        }
        
        .preview-close:hover {
            color: #ffd700;
        }
        
        .preview-modal-body {
            padding: 20px;
            background: #f8f9fa;
            flex: 1;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }
        
        .preview-loading {
            text-align: center;
            padding: 40px;
            font-size: 1.2rem;
            color: #7f8c8d;
        }
        
        .preview-modal-body iframe {
            width: 100%;
            max-width: 100%;
            height: clamp(260px, 65vh, 520px);
            border: none;
            border-radius: 10px;
            background: white;
            box-shadow: 0 6px 24px rgba(0, 0, 0, 0.15);
        }

        .preview-modal-body img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 6px 24px rgba(0, 0, 0, 0.15);
            background: white;
        }
        
        .preview-modal-footer {
            padding: 20px;
            text-align: center;
            background: #f8f9fa;
            border-top: 1px solid #e9ecef;
            border-radius: 0 0 10px 10px;
        }
        
        .preview-close-btn {
            padding: 12px 30px;
            font-size: 1.1rem;
            font-weight: bold;
            background: #95a5a6;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.3s ease;
        }
        
        .preview-close-btn:hover {
            background: #7f8c8d;
        }
        
        .error-message {
            color: #e74c3c;
            font-size: 0.9rem;
            margin-top: 5px;
            display: none;
        }
        
        .loading {
            display: none;
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .purchase-header h1 {
                font-size: 2rem;
            }
            
            .purchase-form {
                padding: 30px 20px;
            }
            
            .form-row {
                grid-template-columns: 1fr;
            }
            
            .amount-selector {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .design-selector {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .form-buttons {
                flex-direction: column;
            }
            
            .preview-btn,
            .submit-btn {
                width: 100%;
                min-width: auto;
            }
            
            .preview-modal-header h2 {
                font-size: 1.2rem;
            }
        }

        @media (max-width: 480px) {
            .purchase-container {
                padding: 25px 15px 40px;
            }

            .amount-selector,
            .design-selector {
                grid-template-columns: 1fr;
            }

            .preview-btn,
            .submit-btn {
                min-width: 0;
                font-size: 1.1rem;
                padding: 16px;
            }

            .preview-modal-content {
                width: 100%;
                max-height: 90vh;
                border-radius: 12px;
            }

            .preview-modal-header,
            .preview-modal-footer {
                padding: 16px;
            }

            .preview-modal-body {
                padding: 16px;
            }
        }

        @media (max-width: 360px) {
            .purchase-form {
                padding: 25px 15px;
            }

            .form-section h3 {
                font-size: 1.3rem;
            }

            .preview-modal-body iframe {
                height: clamp(240px, 60vh, 460px);
            }

            .preview-close {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <nav class="nav">
