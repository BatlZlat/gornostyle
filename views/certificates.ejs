            <div class="footer-content">
                <div class="footer-info">
                    <h3>Горностайл72</h3>
                    <p>Всесезонный горнолыжный тренажерный комплекс</p>
                </div>
                <div class="footer-contacts">
                    <p><i class="fas fa-phone"></i> <%= adminPhone %></p>
                    <p><i class="fas fa-envelope"></i> <%= contactEmail %></p>
                    <p><i class="fas fa-map-marker-alt"></i> с. Яр, ул. Источник, 2А</p>
                </div>
                <div class="footer-social">
                    <a href="<%= telegramGroup %>" target="_blank"><i class="fab fa-telegram-plane"></i></a>
                    <a href="<%= vkGroup %>" target="_blank"><i class="fab fa-vk"></i></a>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 Горностайл72. Все права защищены.</p>
            </div>
        </div>
    </footer>

    <!-- Certificate Preview Modal -->
    <div id="previewModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="modalTitle">Предварительный просмотр сертификата</h2>
                <span class="close" onclick="closePreviewModal()">&times;</span>
            </div>
            <div class="modal-body">
                <iframe id="previewFrame" src="" frameborder="0" width="100%" height="600"></iframe>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="closePreviewModal()">Закрыть</button>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/js/main.js"></script>
    
    <script>
        // Функция для обработки клика по дизайну
        function handleDesignClick(designId, designName) {
            // Проверяем, мобильное ли устройство
            const isMobile = window.innerWidth <= 768;
            
            if (isMobile) {
                // На мобильном - прямой переход к покупке
                window.location.href = `/certificate/purchase?design=${designId}`;
            } else {
                // На десктопе - показываем модальное окно
                openPreviewModal(designId, designName);
            }
        }

        // Функция для открытия модального окна с превью сертификата
        function openPreviewModal(designId, designName) {
            const modal = document.getElementById('previewModal');
            const frame = document.getElementById('previewFrame');
            const title = document.getElementById('modalTitle');
            
            title.textContent = `Предварительный просмотр - ${designName}`;
            frame.src = `/certificate/preview?design=${designId}&amount=2500&name=Образец`;
            modal.style.display = 'block';
        }

        // Функция для закрытия модального окна
        function closePreviewModal() {
            const modal = document.getElementById('previewModal');
            const frame = document.getElementById('previewFrame');
            
            modal.style.display = 'none';
            frame.src = '';
        }

        // Закрытие модального окна при клике вне его
        window.onclick = function(event) {
            const modal = document.getElementById('previewModal');
            if (event.target === modal) {
                closePreviewModal();
            }
        }
    </script>
    
    <!-- Analytics -->
    <% if (yandexMetrikaId) { %>
        <%- include('partials/analytics', { yandexMetrikaId, googleAnalyticsId }) %>
    <% } %>
