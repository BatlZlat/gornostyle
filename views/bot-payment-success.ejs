  <style>
    :root {
      --kuliga-primary: #1e90ff;
      --kuliga-primary-dark: #0f5db6;
      --kuliga-green: #27ae60;
      --kuliga-green-dark: #1f8c4c;
      --kuliga-white: #ffffff;
      --kuliga-gray-100: #f2f5f9;
      --kuliga-gray-200: #e2e8f0;
      --kuliga-gray-500: #64748b;
      --kuliga-gray-700: #334155;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: var(--kuliga-gray-100);
      color: var(--kuliga-gray-700);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 24px;
    }

    .payment-modal {
      background: var(--kuliga-white);
      max-width: 540px;
      width: 100%;
      border-radius: 20px;
      box-shadow: 0 24px 64px rgba(15, 23, 42, 0.15);
      padding: 0;
      overflow: hidden;
      position: relative;
    }

    .payment-modal__header {
      background: linear-gradient(135deg, var(--kuliga-green) 0%, var(--kuliga-green-dark) 100%);
      padding: 32px 28px;
      text-align: center;
      color: var(--kuliga-white);
      position: relative;
    }

    .payment-modal__icon {
      width: 80px;
      height: 80px;
      margin: 0 auto 20px;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 40px;
      animation: scaleIn 0.5s ease-out;
    }

    @keyframes scaleIn {
      from {
        transform: scale(0);
        opacity: 0;
      }
      to {
        transform: scale(1);
        opacity: 1;
      }
    }

    .payment-modal__title {
      font-size: 28px;
      font-weight: 700;
      margin: 0;
      line-height: 1.2;
    }

    .payment-modal__body {
      padding: 32px 28px;
    }

    .payment-info {
      display: flex;
      flex-direction: column;
      gap: 16px;
      margin-bottom: 24px;
    }

    .payment-info__item {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding: 12px 0;
      border-bottom: 1px solid var(--kuliga-gray-200);
    }

    .payment-info__item:last-child {
      border-bottom: none;
    }

    .payment-info__label {
      font-size: 14px;
      color: var(--kuliga-gray-500);
      font-weight: 500;
    }

    .payment-info__value {
      font-size: 16px;
      color: var(--kuliga-gray-700);
      font-weight: 600;
      text-align: right;
      max-width: 60%;
      word-break: break-word;
    }

    .payment-info__amount {
      font-size: 24px;
      font-weight: 700;
      color: var(--kuliga-green);
    }

    .payment-message {
      background: var(--kuliga-gray-100);
      border-left: 4px solid var(--kuliga-green);
      padding: 16px;
      border-radius: 8px;
      margin-bottom: 24px;
      font-size: 14px;
      line-height: 1.6;
      color: var(--kuliga-gray-700);
    }

    .payment-modal__actions {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      padding: 14px 24px;
      border-radius: 12px;
      font-weight: 600;
      font-size: 16px;
      text-decoration: none;
      transition: all 0.2s ease;
      border: none;
      cursor: pointer;
      width: 100%;
    }

    .btn-primary {
      background: var(--kuliga-primary);
      color: var(--kuliga-white);
      box-shadow: 0 8px 24px rgba(30, 144, 255, 0.25);
    }

    .btn-primary:hover {
      background: var(--kuliga-primary-dark);
      transform: translateY(-2px);
      box-shadow: 0 12px 32px rgba(30, 144, 255, 0.35);
    }

    .btn-secondary {
      background: var(--kuliga-gray-200);
      color: var(--kuliga-gray-700);
    }

    .btn-secondary:hover {
      background: var(--kuliga-gray-300);
      transform: translateY(-1px);
    }

    @media (max-width: 600px) {
      body {
        padding: 16px;
      }

      .payment-modal {
        border-radius: 16px;
      }

      .payment-modal__header {
        padding: 24px 20px;
      }

      .payment-modal__icon {
        width: 64px;
        height: 64px;
        font-size: 32px;
      }

      .payment-modal__title {
        font-size: 24px;
      }

      .payment-modal__body {
        padding: 24px 20px;
      }

      .payment-info__amount {
        font-size: 20px;
      }
    }
  </style>
</head>
